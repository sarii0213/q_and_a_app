<%= form_with(model: question) do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <!-- /.form-group -->
  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, class: 'form-control', rows: 10 %>
  </div>
  <!-- /.form-group -->
  <%= f.submit class: 'btn btn-primary mt-3' %>
<% end %>